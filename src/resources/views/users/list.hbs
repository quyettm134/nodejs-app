<div class="mt-4">
    <div class="row">

        {{#each users}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <a href="/users/{{this.slug}}">
                    <img src="{{this.avatar}}" class="card-img-top" style="height: 276px!important; width: 100%!important;" alt="avatar">
                </a>
                <div class="card-body">
                    <a href="/users/{{this.slug}}" style="text-decoration: none;">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/users/{{this.slug}}" class="btn btn-success">About me</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
    
    <a href="/users/create" class="btn btn-primary" style="margin-top: 20px;">Create new user</a>

</div>